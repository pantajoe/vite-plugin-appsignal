{
  "name": "vite-plugin-appsignal",
  "description": "The unofficial Appsignal plugin for Vite ⚡️",
  "version": "0.1.0",
  "author": "pantajoe",
  "license": "MIT",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "exports": {
    "types": "./index.d.ts",
    "import": "./dist/index.mjs",
    "default": "./dist/index.js"
  },
  "homepage": "https://github.com/pantajoe/vite-plugin-appsignal",
  "repository": {
    "type": "git",
    "url": "https://github.com/pantajoe/vite-plugin-appsignal"
  },
  "files": [
    "index.d.ts",
    "client.d.ts",
    "types/*",
    "dist/*"
  ],
  "keywords": [
    "vite-plugin",
    "appsignal",
    "sourcemap"
  ],
  "scripts": {
    "build": "NODE_ENV=production rollup --bundleConfigAsCjs -c rollup.config.ts --configPlugin typescript",
    "dev": "NODE_ENV=develop rollup --bundleConfigAsCjs -c rollup.config.ts --configPlugin typescript -w",
    "test": "jest ./src/*/**.test.ts",
    "test:coverage": "jest --coverage ./src/*/**.test.ts",
    "lint": "eslint ./src/**/*.ts",
    "lint:tests": "eslint ./src/**/*.test.ts",
    "typecheck": "tsc --noEmit",
    "prepare": "is-ci || husky install"
  },
  "devDependencies": {
    "@antfu/eslint-config-ts": "^0.38.4",
    "@commitlint/cli": "^17.6.1",
    "@commitlint/config-conventional": "^17.6.1",
    "@rollup/plugin-commonjs": "24.1.0",
    "@rollup/plugin-eslint": "^9.0.0",
    "@rollup/plugin-typescript": "^11.0.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^18.0.1",
    "eslint": "8.38.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.0",
    "is-ci": "^3.0.1",
    "jest": "^29.5.0",
    "prettier": "2.8.7",
    "rollup": "^3.20.6",
    "ts-jest": "^29.1.0",
    "typescript": "5.0.4",
    "vite": "^4.2.1"
  },
  "peerDependencies": {
    "vite": "^3.0.0 || ^4.0.0"
  },
  "engines": {
    "node": ">= 18"
  },
  "dependencies": {
    "glob": "^10.2.1",
    "node-fetch": "^3.3.1"
  }
}